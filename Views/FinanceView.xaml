    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource CardStyle}" Grid.Row="0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Background="Black">
                <TextBlock Text="Financial Statement" Style="{StaticResource SectionHeaderStyle}" />
                <Button Style="{StaticResource ActionButtonStyle}" Content="Generate statement" Command="{Binding GenerateReportCommand}" HorizontalAlignment="Right" Margin="12,0,0,0"/>
                <Label Content="From" Foreground="#FFE6D8D8"></Label>
                <DatePicker x:Name="dp1" SelectedDate="{Binding SelectedDate1, Mode=TwoWay}"></DatePicker>
                <Label Content="To" Foreground="#FFE6D8D8"></Label>
                <DatePicker x:Name="dp2" SelectedDate="{Binding SelectedDate2, Mode=TwoWay}"></DatePicker>
            </StackPanel>
        </Border>

        <Rectangle Style="{StaticResource Divider}" Grid.Row="1"/>

        <Border Style="{StaticResource CardStyle}" Grid.Row="2">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,6">
                    <TextBlock Text="Yearly Income：" Width="140" Foreground="{StaticResource SubtleTextBrush}"/>
                    <TextBlock Text="{Binding TotalRevenue}" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,6">
                    <TextBlock Text="Yearly Cost：" Width="140" Foreground="{StaticResource SubtleTextBrush}"/>
                    <TextBlock Text="{Binding TotalCost}" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,6">
                    <TextBlock Text="Yearly Profit：" Width="140" Foreground="{StaticResource SubtleTextBrush}"/>
                    <TextBlock Text="{Binding Profit}" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>


        <lvc:CartesianChart Series="{Binding Series}"
                        XAxes="{Binding XAxes}"
                        YAxes="{Binding YAxes}" Grid.Row="3"/>

